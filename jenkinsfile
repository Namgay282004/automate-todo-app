pipeline {
    agent any
    tools {
        nodejs 'LTS v20.x'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Namgay282004/automate-todo-app.git'
            }
        }

        stage('Install Dependencies') {
            parallel {
                stage('Install Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Backend') {
                    steps {
                        dir('backend') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            parallel {
                stage('Test Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm test'
                        }
                    }
                }
                stage('Test Backend') {
                    steps {
                        dir('backend') {
                            sh 'npm test'
                        }
                    }
                }
            }
            post {
                always {
                    junit 'frontend/junit.xml'
                    junit 'backend/junit.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.build('02230290namgay/frontend:latest', 'frontend')
                    docker.build('02230290namgay/backend:latest', 'backend')

                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-creds') {
                        docker.image('02230290namgay/frontend:latest').push()
                        docker.image('02230290namgay/backend:latest').push()
                    }
                }
            }
        }
    }
}

