pipeline {
    agent any

    tools {
        nodejs 'NodeJS 24.0.2' // Make sure this matches the configured NodeJS version in Jenkins
    }

    stages {
        // Stage 1: Checkout Code
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Namgay282004/automate-todo-app.git'
            }
        }

        // Stage 2: Install Backend Dependencies
        stage('Install Backend') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        // Stage 3: Install Frontend Dependencies
        stage('Install Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        // Stage 4: Build Frontend
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        // Stage 5: Run Backend Tests
        stage('Test Backend') {
            steps {
                dir('backend') {
                    sh 'npm test || echo "No backend tests found."'
                }
            }
            post {
                always {
                    // If you're generating test results with a reporter like jest-junit
                    // Make sure test results are saved at the correct path
                    junit 'backend/test-results/junit.xml'
                }
            }
        }

        // Stage 6: Deploy using Docker
        stage('Deploy') {
            steps {
                script {
                    def appImage = docker.build('02230290namgay/assignment2:latest')

                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-creds') {
                        appImage.push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed. Check the logs for more details.'
        }
    }
}

